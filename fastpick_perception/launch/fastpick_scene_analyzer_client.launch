<launch>
    <arg name="camera_ns" default=""/>
    <arg name="camera_name" default="usb_cam"/>
    <arg name="image_ns" default="$(arg camera_ns)/$(arg camera_name)/color"/>
    <arg name="depth_ns" default="$(arg camera_ns)/$(arg camera_name)/aligned_depth_to_color"/> <!--/camera/aligned_depth_to_color"-->
    <arg name="score" default="0.75"/>
    <arg name="show_vis" default="true"/>
    <arg name="publish_source" default="true"/>

    <!-- client -->
    <node pkg="rasberry_perception" name="rasberry_perception_$(arg camera_name)_detector" type="detection_client.py" output="screen" respawn="true">
        <param name="image_ns" type="str" value="$(arg image_ns)"/>
        <param name="score" type="double" value="$(arg score)"/>
        <param name="show_vis" type="bool" value="$(arg show_vis)"/>
        <param name="publish_source" type="bool" value="$(arg publish_source)"/>
        <remap from="/usb_cam/color/camera_info" to="/usb_cam/camera_info" />
        <remap from="/usb_cam/color/image_raw" to="/usb_cam/image_raw" />
    </node>
</launch>
